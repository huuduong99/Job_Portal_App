<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/all_job_post_title"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Job Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/all_job_post_date"
            android:textColor="#0a51bc"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="31 July,2020"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/all_job_post_description"
            android:textColor="@android:color/black"
            android:textAppearance="?android:textAppearanceMedium"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Description"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/all_job_post_skills"
            android:textColor="@android:color/black"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Skills"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/all_job_post_salary"
            android:textColor="#ffbc0b08"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Salary"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>